<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/blue</item>
    </style>

    <!-- TEXTVIEW STYLES -->

    <!-- Publishing date large article. -->
    <style name="PublishDateLarge">
        <item name="android:layout_marginLeft">@dimen/spacing_normal</item>
        <item name="android:layout_marginRight">@dimen/spacing_normal</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <!-- Publishing date regular article. -->
    <style name="PublishDateRegular">
        <item name="android:layout_marginLeft">@dimen/spacing_normal</item>
        <item name="android:layout_marginRight">@dimen/spacing_normal</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <!-- Title large article. -->
    <style name="TitleLarge">
        <item name="android:layout_margin">@dimen/spacing_normal</item>
        <item name="android:textSize">@dimen/font_larger</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <!-- Title regular article. -->
    <style name="TitleRegular">
        <item name="android:layout_marginLeft">@dimen/spacing_normal</item>
        <item name="android:layout_marginRight">@dimen/spacing_normal</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <!-- IMAGEVIEW STYLES -->

    <!-- Large article image. -->
    <style name="ImageLarge">
        <item name="android:adjustViewBounds">true</item>
    </style>

    <!-- Regular article image. -->
    <style name="ImageRegular">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- LAYOUT STYLES -->

    <!-- Large article layout. -->
    <style name="LayoutLarge">
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginLeft">@dimen/spacing_normal</item>
        <item name="android:layout_marginRight">@dimen/spacing_normal</item>
        <item name="android:layout_marginTop">@dimen/spacing_normal</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small</item>
    </style>

    <!-- Regular article layout. -->
    <style name="LayoutRegular">
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginLeft">@dimen/spacing_normal</item>
        <item name="android:layout_marginRight">@dimen/spacing_normal</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small</item>
    </style>

    <!-- VIEW STYLES -->

    <!-- Separator. -->
    <style name="Line">
        <item name="android:layout_marginLeft">@dimen/spacing_normal</item>
        <item name="android:layout_marginRight">@dimen/spacing_normal</item>
        <item name="android:background">@color/gray_light</item>
    </style>

</resources>
